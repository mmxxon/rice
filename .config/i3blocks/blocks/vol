#!/bin/sh

main() {
	case $BLOCK_BUTTON in
		1) setsid -f "$TERMINAL" -e pulsemixer ;;
		2) pamixer -t ;;
		4) pamixer --allow-boost -i 5 ;;
		5) pamixer --allow-boost -d 5 ;;
		6) "$TERMINAL" -e "$EDITOR" "$0" ;;
	esac

	[ $(pamixer --get-mute) = true ] && echo " ðŸ”‡" && exit

	vol="$(pamixer --get-volume)"

	if [ "$vol" -gt "70" ]; then
		icon="ðŸ”Š"
	elif [ "$vol" -lt "30" ]; then
		icon="ðŸ”ˆ"
	else
		icon="ðŸ”‰"
	fi

	echo " $icon$vol%"
}
