#!/bin/bash

main() {
	# collect
	local value="$(xtitle -t 40)"

	$(pidof -x title_i &>/dev/null) || $(title_i &>/dev/null &)

	# colors
	FG=$GRA # color of the surrounding block
	BG=$BLA # color of the block
	FG2=$BLU

	# draw
	# local prefix="<span font='FontAwesome'>\uf017</span> "
	local before="<span color='${BG}' bgcolor='${BLA}'></span>"
	# local after="<span color='${FG2}' bgcolor='${BG}'></span>"

	local text="<span color='${FG}' bgcolor='${BG}'> ${prefix}${value} </span>"

	# echo pango
	[ ! "${value}" == "" ] && echo -e "${text}${after}"
}
