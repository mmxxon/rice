#!/usr/bin/bash

main() {
  local value="ÔÅ≥ $(date '+%y-%m-%d')"
  local value2="$(date '+%H:%M:%S')"
  local before="<span color='${TEA}' bgcolor='${BLA}'>${LF}</span>"
	local text="<span color='${BLA}' bgcolor='${TEA}'> ${value} </span>"
  local after="<span color='${RED}' bgcolor='${TEA}'>${LF}</span>"
	local text2="<span color='${BLA}' bgcolor='${RED}'> ${value2} </span>"
  local after2="<span color='${BLA}' bgcolor='${RED}'>${LF}</span>"

	[ ! "${value}" == "" ] && echo -e "${before}${text}${after}${text2}${after2}"

	case $BLOCK_BUTTON in
		1) setsid -f "$TERMINAL" -e calcurse ;;
	esac
}
